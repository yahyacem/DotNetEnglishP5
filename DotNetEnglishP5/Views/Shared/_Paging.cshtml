@using X.PagedList;
@using X.PagedList.Mvc.Core;

@if (ViewBag.makeFilter != null && ViewBag.modelFilter != null)
{
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index",
        new { page }))
} else
{
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index",
        new { page, makeFilter = ViewBag.makeFilter, modelFilter = ViewBag.modelFilter }))
}